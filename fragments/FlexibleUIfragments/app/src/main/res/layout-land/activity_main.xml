<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent" android:weightSum="2">

    <fragment
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:id="@+id/personListFragment"
        android:name="com.example.android.flexibleuifragments.PersonsFragment"/>
    <fragment
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:id="@+id/detailFragment"
        android:name="com.example.android.flexibleuifragments.DetailsFragment"/>
</LinearLayout>